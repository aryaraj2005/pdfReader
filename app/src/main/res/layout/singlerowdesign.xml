<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="15dp"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardCornerRadius="15dp"
    android:background="@drawable/bgforsinglerow"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/bgforsinglerow"
        android:padding="15dp">


        <ImageView
            android:id="@+id/textbookimg"

            android:layout_width="101dp"
            android:layout_height="117dp"
            app:srcCompat="@drawable/pdf" />

        <TextView
            android:id="@+id/header"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/textbookimg"
            android:gravity="center"
            android:text="This is header"
            android:textColor="@color/white"
            android:textSize="24sp">

        </TextView>

        <LinearLayout
            android:layout_width="253dp"
            android:layout_height="66dp"
            android:layout_below="@+id/header"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/textbookimg"
            android:orientation="horizontal"
            android:padding="5dp">


            <ImageView
                android:id="@+id/commentimg"
                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/books" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000K"
                android:id="@+id/commentxt"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textSize="16sp">

            </TextView>

            <ImageView
                android:id="@+id/likeimg"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/likes" />

            <TextView
                android:id="@+id/liketext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000k"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textSize="16dp">


            </TextView>

            <ImageView
                android:id="@+id/dislikeimg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dislike" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3k"
                android:id="@+id/disliketext"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textSize="16dp">

            </TextView>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>